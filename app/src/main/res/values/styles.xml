<resources>

    <!--Base App Theme-->
    <style name="WeatherTheme" parent="WeatherTheme.Base" />

    <style name="WeatherTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:buttonStyle">@style/WeatherTheme.Button</item><!--
        <item name="android:checkboxStyle">@style/WeatherTheme.Checkbox</item>
        <item name="android:radioButtonStyle">@style/WeatherTheme.RadioButton</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>-->
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
    </style>


    <style name="WeatherTheme.Button" parent="Widget.AppCompat.Button">
        <!--<item name="android:background">@drawable/btn_border_round</item>-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="LoginWeatherTheme.Button" parent="Widget.AppCompat.Button">
        <!--<item name="android:background">@drawable/login_btn_border_round</item>-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="WeatherTheme.MainText" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="WeatherTheme.SecondaryText" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/colorTextLabelNormal</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="WeatherTheme.TertiaryText" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@color/colorTextLabelNormal</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <!--<style name="WeatherTheme.SearchBox" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColorHint">@color/colorTextLabelLight</item>
        <item name="android:drawableRight">@drawable/ic_search</item>
        <item name="android:textColor">@color/colorTextLabelNormal</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="WeatherTheme.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="WeatherTheme.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/colorBreakdownStatusGreen</item>
        <item name="colorSwitchThumbNormal">@color/colorBreakdownStatusRed</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="WeatherTheme.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/colorTextLabelNormal</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    &lt;!&ndash; Alert Dialog &ndash;&gt;
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00B102</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="LoadingDialogTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

-->
    <style name="WeatherTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="WeatherTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="MyDatePickerDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="WeatherTheme.Text.Medium" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <string name="search">Search</string>
</resources>
